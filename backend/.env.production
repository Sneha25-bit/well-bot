# Production Environment Variables for Render Deployment
# Copy these to Render's Environment Variables section

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wellness-bot?retryWrites=true&w=majority

# JWT Configuration - Generate strong secrets in production
JWT_SECRET=your-super-secret-jwt-key-here-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-production
JWT_REFRESH_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@wellnessbot.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend URL - Update with your Vercel deployment URL
FRONTEND_URL=https://your-frontend.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-frontend.vercel.app

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key
