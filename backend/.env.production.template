# Backend Production Environment Template
# Replace the placeholder values with your actual deployment URLs and credentials

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration - Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wellness-bot?retryWrites=true&w=majority

# JWT Configuration - IMPORTANT: Generate strong, unique secrets for production
JWT_SECRET=your-super-strong-jwt-secret-min-32-chars-long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-strong-refresh-secret-min-32-chars-long  
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@wellnessbot.com

# Cloudinary Configuration (Optional - for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend URL - Replace with your Vercel deployment URL
FRONTEND_URL=https://your-actual-frontend-url.vercel.app

# CORS Configuration - Must match your frontend URL exactly
CORS_ORIGIN=https://your-actual-frontend-url.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12

